{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run development",
      "type": "shell",
      "isBackground": true,
      "options": {
        "env": {
          "NODE_ENV": "development"
        }
      },
      "windows": {
        "command": "yarn nodemon"
      },
      "problemMatcher": [
        "$go"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run prodaction",
      "type": "shell",
      "isBackground": true,
      "options": {
        "env": {
          "NODE_ENV": "prodaction"
        }
      },
      "windows": {
        "command": "yarn start"
      },
      "problemMatcher": [
        "$go"
      ]
    }
  ]
}